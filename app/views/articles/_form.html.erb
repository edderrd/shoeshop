 <% if @article.errors.count > 0 %>
   <div class="alert alert-block">
    <h4><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li> 
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @article, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', required: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">

      <div class="input-prepend">
        <span class="add-on">$</span>
        <%= f.text_field :price, :class => 'text_field input-small',  required: true %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_in_shelf, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_in_shelf, :class => 'text_field input-small' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :total_in_vault, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :total_in_vault, :class => 'text_field input-small' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :store_id, Store.all, :id, :name, prompt: false, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                articles_path, :class => 'btn' %>
  </div>
<% end %>
