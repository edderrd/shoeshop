<%- articles_model = Article -%>
<%- stores_model = Store -%>

<div class="page-header">
  <h4><%=t '.title', :default => "Last Articles" %> <a href="<%= new_article_path(@article) %>" class="btn"><i class="icon-plus"></i></a></h4>
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= articles_model.human_attribute_name(:name) %></th>
      <th><%= articles_model.human_attribute_name(:description) %></th>
      <th><%= articles_model.human_attribute_name(:price) %></th>
      <th><%= articles_model.human_attribute_name(:store_id) %></th>
      <th><%= articles_model.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.name, article_path(article) %></td>
        <td><%= article.description %></td>
        <td><%= article.price %></td>
        <td><%= article.store_name %></td>
        <td title="<%=l article.created_at %>"><%= time_ago_in_words(article.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="page-header">
  <h4><%=t '.title', :default => "Last Stores" %> <a href="<%= new_store_path(@store) %>" class="btn"><i class="icon-plus"></i></a></h4>
  
</div>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= articles_model.human_attribute_name(:name) %></th>
      <th><%= articles_model.human_attribute_name(:address) %></th>
      <th><%= articles_model.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= link_to store.name, store_path(store) %></td>
        <td><%= store.address %></td>
        <td title="<%=l store.created_at %>"><%= time_ago_in_words(store.created_at) %> ago</td>
      </tr>
    <% end %>
  </tbody>
</table>
